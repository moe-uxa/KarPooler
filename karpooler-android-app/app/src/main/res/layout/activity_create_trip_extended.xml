<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver/Passenger Criteria"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/layout_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">


    </org.apmem.tools.layouts.FlowLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_criteria"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignLeft="@+id/calendarView"
        android:id="@+id/layout_trip_type"
        android:layout_marginBottom="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:id="@+id/textView8"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_trip_type"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_trip_type"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignLeft="@+id/calendarView"
        android:id="@+id/layout_trip_price">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:id="@+id/textView10"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_trip_price"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>