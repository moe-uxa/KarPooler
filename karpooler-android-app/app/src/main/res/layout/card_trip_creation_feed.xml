<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_user_image"
                android:layout_width="@dimen/card_user_image_size"
                android:layout_height="@dimen/card_user_image_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/person1" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgv_user_image"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgv_user_image"
                android:text="Jared Leto"
                android:textColor="@color/feedCarText"
                android:textSize="@dimen/card_user_name_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_user_name"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_user_name"
                android:text="just created a trip"
                android:textColor="@color/feedCarText"
                android:textSize="@dimen/card_feed_title_text_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_user_name"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_feed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="2 hours ago"
                    android:textColor="@color/feedCarText"
                    android:textSize="@dimen/card_feed_time_text_size" />

                <TextView
                    android:id="@+id/tv_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBaseline="@+id/tv_feed_time"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_feed_time"
                    android:text="-"
                    android:textColor="@color/feedCarText"
                    android:textSize="@dimen/card_feed_time_text_size" />

                <TextView
                    android:id="@+id/tv_feed_number_of_friends_in_common"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBaseline="@+id/tv_dash"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_dash"
                    android:text="3 friends in common"
                    android:textColor="@color/feedCarText"
                    android:textSize="@dimen/card_feed_time_text_size" />

                <LinearLayout
                    android:id="@+id/layout_feed_owner_social_medias"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_feed_number_of_friends_in_common"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/ic_facbook" />-->


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_feed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_feed_text_margin_top_down"
            android:layout_marginTop="@dimen/card_feed_text_margin_top_down"
            android:text="Summer Vacation Trip to Alabama"
            android:textColor="@color/feedCarText"
            android:textSize="@dimen/card_feed_desc_text_size" />

        <LinearLayout
            android:id="@+id/layout_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@drawable/person1"-->
                <!--android:layout_marginRight="@dimen/card_trip_passenger_image_margin_right"/>-->


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_feed_buttons_layout_margin_top">

            <ImageButton
                android:id="@+id/btn_feed_like"
                android:layout_width="@dimen/card_feed_button_width"
                android:layout_height="@dimen/card_feed_button_height"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_like" />

            <ImageButton
                android:id="@+id/btn_feed_comment"
                android:layout_width="@dimen/card_feed_button_width"
                android:layout_height="@dimen/card_feed_button_height"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/btn_feed_like"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_comment" />

            <ImageButton
                android:id="@+id/btn_feed_trip_location"
                android:layout_width="@dimen/card_feed_button_width"
                android:layout_height="@dimen/card_feed_button_height"
                android:layout_toRightOf="@+id/btn_feed_comment"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_location" />

            <Button
                android:id="@+id/btn_feed_view_trip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_feed_button_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/feed_btn_background"
                android:paddingLeft="@dimen/card_feed_text_button_padding_left_right"
                android:paddingRight="@dimen/card_feed_text_button_padding_left_right"
                android:text="VIEW TRIP"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

