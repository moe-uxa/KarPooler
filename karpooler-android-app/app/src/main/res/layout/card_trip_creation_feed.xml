<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_card_height"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_feed_owner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jared Leto"
                android:id="@+id/tv_feed_owner"
                android:layout_alignTop="@+id/imgv_feed_owner"
                android:layout_toRightOf="@+id/imgv_feed_owner"
                android:textColor="@color/feedCarText"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="just created a trip"
                android:id="@+id/tv_feed_title"
                android:layout_alignBaseline="@+id/tv_feed_owner"
                android:layout_toRightOf="@+id/tv_feed_owner"
                android:textColor="@color/feedCarText"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:id="@+id/tv_feed_time"
                android:layout_below="@+id/tv_feed_owner"
                android:layout_alignLeft="@+id/tv_feed_owner"
                android:layout_marginTop="7dp"
                android:textColor="@color/feedCarText"
                android:textSize="14sp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/tv_dash"
            android:layout_toRightOf="@+id/tv_feed_time"
            android:layout_alignBaseline="@+id/tv_feed_time"
            android:layout_marginTop="10dp"
            android:textColor="@color/feedCarText"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 friends in common"
                android:id="@+id/tv_feed_number_of_friends_in_common"
                android:layout_toRightOf="@+id/tv_dash"
                android:layout_alignBaseline="@+id/tv_dash"
                android:layout_marginTop="10dp"
                android:textColor="@color/feedCarText"
                android:textSize="14sp"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summer Vacation Trip to Alabama"
            android:id="@+id/tv_feed_description"
            android:textColor="@color/feedCarText"
            android:textSize="17sp"
            android:layout_margin="12dp" />

        <LinearLayout
            android:id="@+id/layout_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />


            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />

            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>

