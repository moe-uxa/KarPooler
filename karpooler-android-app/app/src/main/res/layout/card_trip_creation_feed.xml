<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_card_height"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_feed_owner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/person1" />

            <TextView
                android:id="@+id/tv_feed_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgv_feed_owner"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imgv_feed_owner"
                android:text="Jared Leto"
                android:textColor="@color/feedCarText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_feed_owner"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_feed_owner"
                android:text="just created a trip"
                android:textColor="@color/feedCarText"
                android:textSize="16sp" />

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/tv_feed_owner"
               android:layout_below="@+id/tv_feed_owner"
               android:layout_marginTop="7dp">

               <TextView
                   android:id="@+id/tv_feed_time"
                   android:layout_width="wrap_content"
                   android:layout_height="20dp"
                   android:text="2 hours ago"
                   android:textColor="@color/feedCarText"
                   android:textSize="13sp" />

               <TextView
                   android:id="@+id/tv_dash"
                   android:layout_width="wrap_content"
                   android:layout_height="20dp"
                   android:layout_alignBaseline="@+id/tv_feed_time"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginTop="10dp"
                   android:layout_toRightOf="@+id/tv_feed_time"
                   android:text="-"
                   android:textColor="@color/feedCarText"
                   android:textSize="13sp" />

               <TextView
                   android:id="@+id/tv_feed_number_of_friends_in_common"
                   android:layout_width="wrap_content"
                   android:layout_height="20dp"
                   android:layout_alignBaseline="@+id/tv_dash"
                   android:layout_marginTop="10dp"
                   android:layout_toRightOf="@+id/tv_dash"
                   android:text="3 friends in common"
                   android:textColor="@color/feedCarText"
                   android:textSize="13sp" />

               <LinearLayout
                   android:id="@+id/layout_feed_owner_social_medias"
                   android:layout_width="50dp"
                   android:layout_height="20dp"
                   android:layout_marginLeft="15dp"
                   android:layout_toRightOf="@+id/tv_feed_number_of_friends_in_common"
                   android:gravity="center_vertical">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_facbook"
                       android:layout_alignBaseline="@+id/tv_feed_number_of_friends_in_common"
                       android:layout_toRightOf="@+id/tv_feed_number_of_friends_in_common"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_gmail" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_linked_in" />

               </LinearLayout>


           </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_feed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="Summer Vacation Trip to Alabama"
            android:textColor="@color/feedCarText"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person2" />

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person3" />

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person4" />

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person5" />

            <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgv_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/person6" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <com.github.siyamed.shapeimageview.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgv_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person6" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_more_round"
                    android:text="19+"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp"></Button>

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageButton
                android:id="@+id/btn_feed_like"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_like" />

            <ImageButton
                android:id="@+id/btn_feed_comment"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/btn_feed_like"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_comment" />

            <ImageButton
                android:id="@+id/btn_feed_trip_location"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/btn_feed_comment"
                android:background="@drawable/feed_btn_background"
                android:src="@drawable/ic_location" />

            <Button
                android:id="@+id/btn_feed_view_trip"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/feed_btn_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="VIEW TRIP"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

