<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.eramo.karpooler.fragments.TripDiscussionFragment">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/layout_messages_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


    </ScrollView>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btn_pickup_location"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_box_height">

        <EditText
            android:id="@+id/edt_text_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="@string/type_messages"
            android:padding="@dimen/chat_text_box_padding"
            android:textSize="@dimen/chat_text_box_text_size" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/send_btn_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background = "@color/colorPrimary"
            android:text="Send"
            android:textSize="@dimen/chat_text_box_text_size"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
